{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "app/main",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [{
      "include": "./mail/templates",
      "outDir": "dist/"
    }],
    "outputPath": "dist",
    "watchAssets": true,
    "plugins": ["@nestjs/swagger"],
    "watch": true
  }
}
