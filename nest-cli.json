  "sourceRoot": "src",
  "entryFile": "app/main",
  "compilerOptions": {
    "deleteOutDir": true,
    "outputPath": "dist",
    "watchAssets": true,
    "plugins": ["@nestjs/swagger"],
    "watch": true
  }
}
